<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_black"
    tools:context=".presentation.user_goal.UserWeightGoalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanks Marvilo! Now for your goals."
            android:textColor="@color/light_gray"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select up to 3 that are important to you, including one weight goal."
            android:textSize="14sp"
            android:textColor="@color/light_gray"
            android:layout_marginBottom="16dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/llOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardLoseWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardStrokeWidth="2dp"
                    app:cardStrokeColor="@color/gray"
                    app:cardBackgroundColor="@color/light_gray"
                    android:tag="weight"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lose weight"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:padding="16dp" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMaintainWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardStrokeWidth="2dp"
                    app:cardStrokeColor="@color/gray"
                    app:cardBackgroundColor="@color/light_gray"
                    android:tag="weight"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Maintain weight"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:padding="16dp" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardGainWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardStrokeWidth="2dp"
                    app:cardStrokeColor="@color/gray"
                    app:cardBackgroundColor="@color/light_gray"
                    android:tag="weight"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gain weight"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:padding="16dp" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardGainMuscle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardStrokeWidth="2dp"
                    app:cardStrokeColor="@color/gray"
                    app:cardBackgroundColor="@color/light_gray"
                    android:tag="other"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gain muscle"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:padding="16dp" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardModifyMyDiet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardStrokeWidth="2dp"
                    app:cardStrokeColor="@color/gray"
                    app:cardBackgroundColor="@color/light_gray"
                    android:tag="other"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mofidy my diet"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:padding="16dp" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardManageStress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardStrokeWidth="2dp"
                    app:cardStrokeColor="@color/gray"
                    app:cardBackgroundColor="@color/light_gray"
                    android:tag="other"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manage stress"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:padding="16dp" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardIncreaseStepCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardStrokeWidth="2dp"
                    app:cardStrokeColor="@color/gray"
                    app:cardBackgroundColor="@color/light_gray"
                    android:tag="other"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Increase step count"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:padding="16dp" />
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</FrameLayout>