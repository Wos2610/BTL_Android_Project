<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/labelDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingBottom="5dp" />

    <EditText
        android:id="@+id/etDialogDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter description here"
        android:labelFor="@id/labelDescription" />

    <TextView
        android:id="@+id/labelMinutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minutes"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingTop="15dp"
        android:paddingBottom="5dp" />

    <EditText
        android:id="@+id/etDialogMinutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter minutes"
        android:inputType="number"
        android:labelFor="@id/labelMinutes" />

    <TextView
        android:id="@+id/labelCalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calories Burned"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingTop="15dp"
        android:paddingBottom="5dp" />

    <EditText
        android:id="@+id/etDialogCalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter calories burned"
        android:inputType="numberDecimal"
        android:labelFor="@id/labelCalories" />
</LinearLayout>
